FROM ollama/ollama:latest

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Pre-download the ministral-3:8b-instruct-2512-q8_0 model during build
# (efficient Mistral variant with 8-bit quantization for better tool calling)
RUN ollama serve & \
    sleep 10 && \
    ollama pull ministral-3:8b-instruct-2512-q8_0 && \
    pkill ollama

# Default command to serve
# Note: Base image has ENTRYPOINT ["/bin/ollama"], so CMD just needs the subcommand
CMD ["serve"]
